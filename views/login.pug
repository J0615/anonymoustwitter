extends layout/login-layout.pug

block content
    .loginContainer
        h1 Login
        form(method="POST")
            p #{errorMessage}

            input(type="text", name="logUsername", placeholder="Username or email", required="")
            input(type="password", name="logPassword", placeholder="Password", required="")
            input(type="submit", value="Login")
        a(href="/register") Don't have an account? Register here!
